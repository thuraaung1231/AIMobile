                                                <span class="text-primary fw-bold fs-6 d-flex">
                                                @{
                                            var roundedUnitPrice = Math.Floor(ViewBag.ProductList[i].UnitPrice);
                                                }
                                                    <p>@roundedUnitPrice</p>
                                                    <p class="d-inline ms-2">Ks</p>
                                                </span>
                                                <span class="text-primary">@ViewBag.ShopList[i].Name</span>
                                            </div>
                                        </div>
                                    </div>
                               </div>
                }
            }
            else
            {
                            <div class="d-flex justify-content-center align-items-center">
