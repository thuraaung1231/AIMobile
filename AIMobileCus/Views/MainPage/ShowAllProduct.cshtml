        @* Showing Products *@
        <div class="col-9">
            @for(int i = 0; i < Model.Count; i++)
            {
                <div class="row border mb-2">
                    <div class="col-3 selectItem p-3">
                        <img src="@ViewBag.ImageList[i].FrontImageUrl" class="w-100" alt="" />
                    </div>
                    <div class="col-9 d-flex flex-column justify-content-between align-items-between p-2">
                        <div>
                            <p class="fw-bold fs-5 m-0 p-0">@ViewBag.ProductList[i].Name</p>
                            <h6 class="p-0 m-0">
                                @ViewBag.DescriptionList[i]
                            </h6>
                        </div>
                        <div id="@ViewBag.ImageList[i].Id" class="@ViewBag.ProductList[i].Id">
                            <button class="btn active btn-sm fs-6 SeeOptions">See Options</button>
                        </div>
                        <div>
                            <p class="m-0 p-0">
                                <i class="fa-solid fa-circle me-2" style="color: red"></i><i class="fa-solid fa-circle me-2" style="color: blue"></i><i class="fa-solid fa-circle" style="color: green"></i>
                            </p>
                            <div class="d-flex justify-content-between">
                                <span class="text-primary fw-bold fs-6 d-flex">
                                    <p>@ViewBag.ProductList[i].UnitPrice</p>
                                    <p class="d-inline ms-2">Ks</p>
                                </span>
                                <span class="text-primary">@ViewBag.ShopList[i].Name</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
      </div>
    </div>
    <script>
        $(".SeeOptions").on('click', function () {
        var ImageAndProductId = {};
        var parentDiv = $(this).parent();
        ImageAndProductId.ImageId = parentDiv.attr('id');
        ImageAndProductId.ProductId = parentDiv.attr('class');
        var url = "/ShopProduct/ViewShopProduct";
        $.ajax({
            type: 'POST',
            url: url,
            data: ImageAndProductId,
            success: function (response) {
                var data = JSON.stringify(response);

                if (data != null) {
                    window.location.href = "/ShopProduct/DetailProduct?shopProductData=" + encodeURIComponent(JSON.stringify(response));
                }

            },
            failure: function (error) {
                console.log(error);
            }
        })
        })
    </script>