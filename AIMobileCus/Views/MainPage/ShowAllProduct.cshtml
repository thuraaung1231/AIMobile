                <i class="fa-solid fa-cart-shopping text-warning px-1"></i>
                Cart
                <span class="position-absolute top-0 end-50 translate-middle badge rounded-pill text-bg-secondary">  @TempData["count"]</span>
            </a>
        </button>
    </div>
   
</div>
