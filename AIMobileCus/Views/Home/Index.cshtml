<!--Slide Show-->
<div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner SlidecContainer">

        <div class="carousel-item active" data-bs-interval="2000">
            <div class="d-flex">
                <img src="/Images/slide1.png"
                     class="w-50 display-4 d-block slideImg"
                     alt="..." />
                <p class="d-flex justify-content-center w-50 align-items-center fs-3 slideFontColor fw-bold bg-light">

                    20% Discount For Summer Promotion <br> Enjoy With Your Life <br> Enjyo the Smooth
                </p>
            </div>
        </div>
        <div class="carousel-item" data-bs-interval="2000">
            <div class="d-flex">
                <img src="/images/slide2.png"
                     class="w-50 d-block display-4 slideImg"
                     alt="..." />
                <p class="d-flex justify-content-center w-50 align-items-center fs-3 p-sm-3 fw-bold slideFontColor">
                    10% Discount For March Promotion <br> Enjoy with Your Life <br>Enjoy the Premium
                </p>
            </div>
        </div>
        <div class="carousel-item">
            <div class="d-flex">
                <img src="/images/slide3.png"
                     class="w-50 d-block display-4 slideImg"
                     alt="..." />
                <p class="d-flex justify-content-center align-items-center w-50 fs-3 p-sm-3 fw-bold slideFontColor">
                    30% Discount For Clearnance Price <br>Be smart with Your Laptop
                </p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev"
            type="button"
            data-bs-target="#carouselExample"
            data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next"
            type="button"
            data-bs-target="#carouselExample"
            data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
