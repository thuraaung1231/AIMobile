@model ProductViewModel
<body style="background-color:lightblue">
    @if (TempData["Info"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["Info"]
        </div>
    }
    <form action="/Product/Edit" method="post">
        <h3>Edit Product</h3>
        <div class="mb-3">
            <label class="form-label">Type</label>
            <input name="Id" type="hidden" value="@Model.Id"/>

            <select name="TypeId" class="form-select">
                <option value="@Model.TypeId">@Model.TypeName</option>
                @foreach (var Type in ViewBag.FromTypeId)
                {
                    if (Model.TypeId!=Type.Id)
                    {
                        <option value="@Type.Id">@Type.Name</option>
                    }
                  


                }
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Brand</label>

            <select name="BrandId" class="form-select">
                <option value="@Model.BrandId">@Model.BrandName</option>
                @foreach (var Brand in ViewBag.FromBrandId)
                {
                    if (Model.BrandId != Brand.Id)
                    {
                        <option value="@Brand.Id">@Brand.Name </option>
                    }
                   

                }
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Product Name</label>
            <input type="text" class="form-control" name="Name" value="@Model.Name">
        </div>
        <div class="mb-3">
            <label class="form-label">Unit Price</label>
            <input type="number" class="form-control" name="UnitPrice" value="@Model.UnitPrice">
        </div>
        <input type="submit" class="btn btn_primary" value="Entry" />
        <input type="reset" class="btn btn_primary" value="Cancel" />
    </form>
</body>


