@model PaymentTypeViewModel
@{
    ViewData["Title"] = "PaymentType Entry";
}

<body style="background-color:lightcyan">
    
    <h3 class="mx-auto">Entry Payment Type</h3>
    <div class="col-12 m-0 p-0">
        <h4 class="col-lg-7 col-md-6 col-10 mx-auto text-center text-light py-3 formHeader m-0 p-0 rounded-top AdminNav">Entry Image</h4>
    </div>
    <form action="/paymenttype/entry" method="post" class="col-lg-7 col-md-6 col-10 mx-auto shadow-sm p-3 border border-2 border-secondary rounded-bottom">
        @if (TempData["info"] != null)
        {
            <div class="alert alert-success">
                @TempData["info"]
            </div>
        }
        <div class="row">
            <div class="col-12 mb-3 d-flex flex-column">
                <label class="labelFontSize fw-bold">Payment Type*</label>
                <input type="text" class="border-0 border-bottom border-primary bg-transparent search-Bar" name="PaymentType">
            </div>
            <div class="col-12 mb-2">
                <button type="submit" class="btn btn-warning col-5" value="Entry">Entry</button>
                <button type="reset" class="btn btn-secondary col-5" value="Cancel">Cancel</button>
            </div>
        </div>
    </form>
</body>