@model PaymentTypeViewModel
@{
    ViewData["Title"] = "Payment Type Edit";
}

<body style="background-color:lightcyan">
    @if (TempData["info"] != null)
    {
        <div class="alert alert-success">
            @TempData["info"]
        </div>
    }
    <h3 class="mx-auto">Edit Payment Type</h3>
    <div class="col-12 m-0 p-0">
        <h4 class="col-lg-9 col-md-6 col-10 mx-auto text-center text-light py-3 formHeader m-0 p-0 rounded-top AdminNav">Edit Payment Type</h4>
    </div>
    <form action="/paymenttype/update" method="post" class="col-lg-9 col-md-6 col-10 mx-auto shadow-sm p-3 border border-2 border-secondary rounded-bottom">
        <input type="hidden" name="id" value="@Model.Id" />

        <div class="row">
            <div class="col-12 mb-3 d-flex flex-column">
                <label class="labelFontSize fw-bold">PaymentType</label>
                <input type="text" class="border-0 border-bottom border-primary bg-transparent search-Bar" name="PaymentType" value="@Model.PaymentType">
            </div>
            <div class="col-12 mb-2">
                <button type="submit" class="btn btn-warning col-5" value="Entry">Update</button>
                <button type="reset" class="btn btn-secondary col-5" value="Cancel">Cancel</button>
            </div>
        </div>
    </form>
</body>