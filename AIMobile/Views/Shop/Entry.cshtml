@model ShopViewModel
@{
    ViewData["Title"] = "Shop Entry";
}

<body style="background-color:lightcyan">
    @if (TempData["info"] != null)
    {
        <div class="alert alert-success">
            @TempData["info"]
        </div>
    }
    <h3 class="mx-auto">Entry Shop</h3>
    <form action="/shop/entry" method="post">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control border-bottom" asp-for="Name" placeholder="PLease Fill the Field!">
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label class="form-label">Status</label>
            <input type="text" class="form-control border-bottom" asp-for="Status" placeholder="PLease Fill the Field!">
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Address</label>
            <input type="text" class="form-control border-bottom" asp-for="Address" placeholder="PLease Fill the Field!">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input">
            <label class="form-check-label">Terms And Conditions</label>
        </div>
        <input type="submit" class="btn btn-primary" value="Entry">
        <input type="reset" class="btn btn-secondary" value="Cancel">
    </form>
</body>