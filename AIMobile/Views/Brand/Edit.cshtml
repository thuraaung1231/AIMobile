@model BrandViewModels
<body style="background-color:lightblue">
    @if (TempData["Info"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["Info"]
        </div>
    }
    <h3>Entry Brand</h3>
    <div class="col-12 m-0 p-0">
        <h4 class="col-lg-9 col-md-6 col-10 mx-auto text-center text-light py-3 formHeader m-0 p-0 rounded-top AdminNav">Edit Brand Type</h4>
    </div>
    <form action="/Brand/Edit" method="post" class="col-lg-9 col-md-6 col-10 mx-auto shadow-sm p-3 border border-2 border-secondary rounded-bottom">
        <input type="hidden" value="@Model.Id" name="Id" />

        <div class="row">
            <div class="col-12 mb-3 d-flex flex-column">
                <label class="labelFontSize fw-bold fs-5">Brand Name</label>
                <input type="text" class="border-0 border-bottom border-primary bg-transparent search-Bar" name="Name" value="@Model.Name">
            </div>
            <div class="col-12 mb-2">
                <button type="submit" class="btn btn-warning col-5 fw-bold" value="Update">Update</button>
                <button type="reset" class="btn btn-secondary col-5 fw-bold" value="Cancel">Cancel</button>
            </div>
        </div>
    </form>
</body>
