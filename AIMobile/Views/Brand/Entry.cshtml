@model BrandViewModels
@{
    ViewData["Title"] = "Brand Entry";
}
<body style="background-color:lightblue">
    @if (TempData["Info"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["Info"]
        </div>
    }
    <h3>Entry Brand</h3>
    <form action="/brand/Entry" method="post">

       

        <div class="mb-3">
            <label class="form-label">Brand Name</label>
            <input type="text" class="form-control border-bottom" asp-for="Name" placeholder="PLease Fill the Field!">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>




        <input type="submit" class="btn btn-primary" value="Entry">
        <input type="reset" class="btn btn-secondary" value="Cancel">
    </form>
    </body>
