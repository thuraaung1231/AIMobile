
<body style="background-color:lightblue">
    @if (TempData["Info"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["Info"]
        </div>
    }
    <form action="/Product/Entry" method="post">
    <h3>Entry Product</h3>
    <div class="mb-3">
        <label class="form-label">Type</label>

        <select name="TypeId" class="form-select">
            <option value="">Choose Type</option>
            @foreach (var Type in ViewBag.FromTypeId)
            {
                    <option value="@Type.Id" >@Type.Name</option>
              
                
            }
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Brand</label>

            <select name="BrandId" class="form-select">
            <option value="">Choose Brand</option>
                @foreach (var Brand in ViewBag.FromBrandId)
            {
                    <option value="@Brand.Id" >@Brand.Name </option>
                   
            }
        </select>
    </div>
    <div class="mb-3">
            <label class="form-label">Product Name</label>
            <input type="text" class="form-control" name="Name">
        </div>
        <div class="mb-3">
            <label class="form-label">Unit Price</label>
            <input type="number" class="form-control" name="UnitPrice">
        </div>
        <input type="submit" class="btn btn_primary" value="Entry" />
        <input type="reset" class="btn btn_primary" value="Cancel" />
    </form>
    <div class="col-12 m-0 p-0">
        <h4 class="col-lg-7 col-md-6 col-10 mx-auto text-center text-light py-3 formHeader m-0 p-0 rounded-top AdminNav">Entry Product</h4>
    </div>
    <form class="col-lg-7 col-md-6 col-10 mx-auto shadow-sm p-3 border border-2 border-secondary rounded-bottom">

        <div class="row">
            <div class="col-12 mb-3 d-flex flex-column">
                <label class="labelFontSize fw-bold">Product Name*</label>
                <input type="text" class="border-0 border-bottom border-primary bg-transparent search-Bar">
            </div>
            <div class="col-12 mb-3 d-flex flex-column">
                <label class="labelFontSize fw-bold">Product Type*</label>
                <input type="text" class="border-0 border-bottom border-primary bg-transparent search-Bar">
            </div>
            <div class="col-12 mb-3 d-flex flex-column">
                <label class="labelFontSize fw-bold">Product Brand*</label>
                <input type="text" class="border-0 border-bottom border-primary bg-transparent search-Bar">
            </div>
            <div class="col-12 mb-3 d-flex flex-column">
                <label class="labelFontSize fw-bold">Unit Price*</label>
                <input type="text" class="border-0 border-bottom border-primary bg-transparent search-Bar">
            </div>
            <div class="col-12 mb-2">
                <button type="submit" class="btn btn-warning col-5">Entry</button>
                <button type="reset" class="btn btn-secondary col-5">Cancel</button>
            </div>
        </div>

    </form>
</body>

