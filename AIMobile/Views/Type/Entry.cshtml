@model TypeViewModel
@{
    ViewData["Title"] = "Type Entry";
}
<body style="background-color:lightblue">
    @if (TempData["Info"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["Info"]
        </div>
    }
    <h3>Entry Type</h3>
    <form action="/Type/Entry" method="post">



        <div class="mb-3">
            <label class="form-label">Type Name</label>
            <input type="text" class="form-control border-bottom" asp-for="Name" placeholder="PLease Fill the Field!">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>


       
        <input type="submit" class="btn btn-primary" value="Entry">
        <input type="reset" class="btn btn-secondary" value="Cancel">
    </form>
</body>
