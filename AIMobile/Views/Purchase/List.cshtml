@model List<PurchaseViewModel>

<h1>Purchase List Information</h1>
@if (TempData["info"] != null)
{
    <div class="alert alert-info">@TempData["info"]</div>
}

<table class="table table-striped-columns" id="tablePurchase">
    <thead>
        <tr>
            <th scope="col">Sr.No</th>
            <th scope="col">ShopProductId</th>
            <th scope="col">CustomerId</th>
            <th scope="col">PurchaseDateTime</th>
            <th scope="col">TotalPrice</th>
            <th scope="col">ScreenShot</th>
            <th scope="col">PaymentTypeId</th>
            <th scope="col">DeliId</th>
            <th scope="col">TransactionId</th>
            <th scope="col">Action</th>


        </tr>
    </thead>
    <tbody>
        @{
            int index = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@index</td>
                <td>@item.ShopProductId</td>
                <td>@item.CustomerId</td>
                <td>@item.PurchaseDateTime</td>
                <td>@item.TotalPrice</td>
                <td>@item.ScreenShot</td>
                <td>@item.PaymentTypeId</td>
                <td>@item.DeliId</td>
                <td>@item.TransactionId</td>
                <td>
                    <a href="/Purchase/Delete?id=@item.Id" onclick="return confirm('are you sure to delete this recrod?');" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                </td>


            </tr>
            index++;
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#tablePurchase").DataTable();

    })
</script>